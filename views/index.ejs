<%- include("navbar.ejs") %>



    <!-- Hero Section -->
    <section class="hero-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <!-- CONTENT + IMAGE -->
                <div class="col-lg-7 text-center text-lg-start">
                    <h1 class="hero-title mb-3">
                        Best Car
                        <span class="text-warning">Booking Service</span>
                        <span>For Travel</span>
                    </h1>
                    <p class="lead text-muted mb-4">
                        Quick, Safe, and Budget-Friendly Cab Services. Experience comfortable travel with our
                        professional drivers.
                    </p>
                    <div class="d-flex gap-3 mb-4">
                        <div class="feature-box">
                            <i class="fa fa-shield-alt text-warning fs-3"></i>
                            <p class="mb-0 fw-semibold">Safe Travel</p>
                        </div>
                        <div class="feature-box">
                            <i class="fa fa-clock text-warning fs-3"></i>
                            <p class="mb-0 fw-semibold">24/7 Available</p>
                        </div>
                        <div class="feature-box">
                            <i class="fa fa-rupee-sign text-warning fs-3"></i>
                            <p class="mb-0 fw-semibold">Best Price</p>
                        </div>
                    </div>
                    <div class="mt-4">

                        <div id="carImageSlider" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">

                            <!-- Indicators -->
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carImageSlider" data-bs-slide-to="0"
                                    class="active"></button>
                                <button type="button" data-bs-target="#carImageSlider" data-bs-slide-to="1"></button>
                            </div>

                            <!-- Images -->
                            <div class="carousel-inner rounded shadow">
                                <div class="carousel-item active">
                                    <img src="/public/ertika.png" class="d-block w-100 car-img" alt="Ertiga">
                                </div>
                                <div class="carousel-item">
                                    <img src="/public/images (1).jpeg" class="d-block w-100 car-img" alt="Swift">
                                </div>
                            </div>

                            <!-- Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#carImageSlider"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carImageSlider"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>

                        </div>

                    </div>

                </div>
                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="booking-box text-white">
                        <form action="/home_form" method="post">
                            <!-- Cab Type -->
                            <div class="d-flex mb-3">
                                <button class="btn tab-main w-100 me-2 active" type="button">
                                    <i class="fa fa-building"></i> Outstation
                                </button>
                            </div>

                            <!-- Trip Type -->
                            <div class="btn-group w-100 mb-3">
                                <button class="btn btn-warning trip-btn active" type="button">One Way</button>
                                <button class="btn btn-light trip-btn" type="button">Round Trip</button>
                            </div>

                            <!-- Name -->
                            <div class="row mb-3">
                                <div class="col">
                                    <input type="text" name="first_name" class="form-control" placeholder="First Name"
                                        required>
                                </div>
                                <div class="col">
                                    <input type="text" name="last_name" class="form-control" placeholder="Last Name"
                                        required>
                                </div>
                            </div>

                            <!-- Email -->
                            <input type="email" name="email" class="form-control mb-3" placeholder="Email Address"
                                required>

                            <!-- Cities -->
                            <input type="text" name="from_city" class="form-control mb-3" placeholder="From City"
                                required>

                            <input type="text" name="to_city" class="form-control mb-3" placeholder="To City" required>

                            <!-- Date & Time -->
                            <div class="row mb-3">
                                <div class="col">
                                    <input type="date" name="travel_date" class="form-control" required>
                                </div>
                                <div class="col">
                                    <input type="time" name="travel_time" class="form-control" required>
                                </div>
                            </div>

                            <!-- Mobile -->
                            <input type="tel" name="mobile" class="form-control mb-4" placeholder="Mobile Number"
                                pattern="[0-9]{10}" required>

                            <!-- Submit -->
                            <button class="btn btn-warning w-100 fw-bold" type="submit">
                                Book Now
                            </button>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Quick Info Section -->
    <section class="quick-info py-4 bg-light">
        <div class="container">
            <div class="row text-center">
                <div class="col-12">
                    <h6 class="text-muted fw-semibold mb-2">
                        <i class="fa fa-bolt text-warning"></i> Quick & Safe And Budget Cab
                    </h6>
                    <h2 class="fw-bold my-2">
                        Call At :
                        <span class="text-warning">+91-9921295514</span>
                    </h2>
                    <p class="fw-semibold text-secondary mb-0">
                        Book A Cab In 3 Easy Steps
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="fw-bold mb-3">Why Choose Us?</h2>
                    <p class="text-muted">We provide the best travel experience</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="feature-icon mb-3">
                            <i class="fa fa-user-shield fa-3x text-warning"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Professional Drivers</h5>
                        <p class="text-muted">Experienced and well-trained drivers for your safety and comfort.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="feature-icon mb-3">
                            <i class="fa fa-car-side fa-3x text-warning"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Well Maintained Cars</h5>
                        <p class="text-muted">Clean, comfortable, and regularly serviced vehicles for your journey.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="feature-icon mb-3">
                            <i class="fa fa-headset fa-3x text-warning"></i>
                        </div>
                        <h5 class="fw-bold mb-3">24/7 Support</h5>
                        <p class="text-muted">Round-the-clock customer support to assist you anytime, anywhere.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Steps Section -->
    <section class="steps-section py-5 bg-light">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="fw-bold mb-3">How It Works</h2>
                    <p class="text-muted">Book your ride in 3 simple steps</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="step-number mb-3">
                        <span
                            class="badge bg-warning text-dark fs-2 rounded-circle d-inline-flex align-items-center justify-content-center"
                            style="width: 80px; height: 80px;">1</span>
                    </div>
                    <h5 class="fw-bold mb-3">Fill Details</h5>
                    <p class="text-muted">Enter your pickup location, destination, date, and time.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="step-number mb-3">
                        <span
                            class="badge bg-warning text-dark fs-2 rounded-circle d-inline-flex align-items-center justify-content-center"
                            style="width: 80px; height: 80px;">2</span>
                    </div>
                    <h5 class="fw-bold mb-3">Confirm Booking</h5>
                    <p class="text-muted">Review your details and confirm the booking.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="step-number mb-3">
                        <span
                            class="badge bg-warning text-dark fs-2 rounded-circle d-inline-flex align-items-center justify-content-center"
                            style="width: 80px; height: 80px;">3</span>
                    </div>
                    <h5 class="fw-bold mb-3">Enjoy Ride</h5>
                    <p class="text-muted">Sit back, relax, and enjoy your comfortable journey.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <h5 class="fw-bold mb-3">RENUKA TOURS AND TRAVEL</h5>
                    <p class="text-muted mb-0">Your trusted travel partner for safe and comfortable journeys.</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <h6 class="fw-semibold mb-2">Contact Us</h6>
                    <p class="mb-1">
                        <a href="tel:+919921295514" class="text-white text-decoration-none">
                            <i class="fa fa-phone text-warning me-2"></i>+91-9921295514
                        </a>
                    </p>
                    <p class="mb-0">
                        <a href="tel:+918999295514" class="text-white text-decoration-none">
                            <i class="fa fa-phone text-warning me-2"></i>+91-8999295514
                        </a>
                    </p>
                </div>
            </div>
            <hr class="my-3 bg-secondary">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted mb-0">&copy; 2024 Renuka Tours and Travel. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>


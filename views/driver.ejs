<%- include("navbar.ejs") %>

<!-- Page Header -->
<section class="page-header bg-primary text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-3">About Our Drivers</h1>
                <p class="lead">Professional, Experienced, and Trustworthy</p>
            </div>
        </div>
    </div>
</section>

<!-- Driver Info Section -->
<section class="driver-info py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6 mb-4 mb-lg-0">

                <div id="driverSlider" class="carousel slide shadow-lg rounded" data-bs-ride="carousel">
                    
                    <!-- Indicators -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#driverSlider" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#driverSlider" data-bs-slide-to="1"></button>
                    </div>
            
                    <!-- Slider Images -->
                    <div class="carousel-inner rounded">
                        <div class="carousel-item active">
                            <img src="/public/images.jpeg" class="d-block w-100 img-fluid" alt="Driver Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="/public/images (1).jpeg" class="d-block w-100 img-fluid" alt="Driver Image 2">
                        </div>
                    </div>
            
                    <!-- Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#driverSlider" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#driverSlider" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
            
                </div>
            
            </div>
            
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">Meet Our Professional Drivers</h2>
                <p class="lead text-muted mb-4">
                    At Renuka Tours and Travel, we take pride in our team of highly skilled and experienced drivers 
                    who are committed to providing you with a safe, comfortable, and enjoyable travel experience.
                </p>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-check-circle text-warning fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Licensed & Certified</h6>
                                <p class="text-muted small mb-0">All drivers hold valid commercial licenses</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-check-circle text-warning fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Years of Experience</h6>
                                <p class="text-muted small mb-0">Extensive knowledge of routes and roads</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-check-circle text-warning fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Punctual Service</h6>
                                <p class="text-muted small mb-0">Always on time for your convenience</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-check-circle text-warning fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Friendly & Courteous</h6>
                                <p class="text-muted small mb-0">Professional and respectful behavior</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Driver Qualities Section -->
<section class="driver-qualities py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3">What Makes Our Drivers Special</h2>
                <p class="text-muted">We ensure the highest standards for our team</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="quality-card text-center p-4 h-100 shadow-sm rounded bg-white">
                    <div class="quality-icon mb-3">
                        <i class="fa fa-graduation-cap fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Well Trained</h5>
                    <p class="text-muted">Regular training sessions on safety protocols, customer service, and road regulations.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quality-card text-center p-4 h-100 shadow-sm rounded bg-white">
                    <div class="quality-icon mb-3">
                        <i class="fa fa-map-marked-alt fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Route Experts</h5>
                    <p class="text-muted">In-depth knowledge of local and outstation routes for the fastest and safest journey.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quality-card text-center p-4 h-100 shadow-sm rounded bg-white">
                    <div class="quality-icon mb-3">
                        <i class="fa fa-shield-alt fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Safety First</h5>
                    <p class="text-muted">Prioritizing your safety with defensive driving techniques and adherence to traffic rules.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Driver Commitment Section -->
<section class="driver-commitment py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="fw-bold mb-4">Our Commitment to You</h2>
                <p class="lead text-muted mb-4">
                    Our drivers are not just chauffeurs; they are your travel partners. They understand the importance 
                    of your journey and are dedicated to making it as smooth and pleasant as possible.
                </p>
                <div class="row g-3 mt-4">
                    <div class="col-md-6">
                        <div class="commitment-item p-3 bg-white rounded shadow-sm">
                            <i class="fa fa-clock text-warning fs-4 mb-2"></i>
                            <h6 class="fw-bold">Timely Service</h6>
                            <p class="text-muted small mb-0">Always punctual and reliable</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="commitment-item p-3 bg-white rounded shadow-sm">
                            <i class="fa fa-smile text-warning fs-4 mb-2"></i>
                            <h6 class="fw-bold">Customer Satisfaction</h6>
                            <p class="text-muted small mb-0">Your comfort is our priority</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


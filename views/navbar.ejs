<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
body{
    font-family: 'Segoe UI', sans-serif;
}

/* Navbar */
.navbar-brand{
    font-weight:800;
    font-size:26px;
}
   .car-img {
    height: 320px;
    object-fit: cover;
}
.navbar-brand span{
    color:#ffc107;
}
.call-btn{
    border-radius:30px;
    font-weight:600;
}

/* Hero Section */
.hero-section{
    background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
    padding: 60px 0;
    min-height: 600px;
}

/* Booking Box */
.booking-box{
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}
.booking-box input{
    border-radius: 8px;
    height: 48px;
    border: none;
    padding: 12px 15px;
}
.booking-box input:focus{
    box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.25);
    border-color: #ffc107;
}

/* Tabs */
.tab-main{
    background: #ffc107;
    color: #000;
    font-weight: 700;
    border-radius: 8px;
    border: none;
    transition: all 0.3s;
}
.tab-main:hover{
    background: #ffca2c;
    transform: translateY(-2px);
}
.trip-btn{
    font-weight: 600;
    transition: all 0.3s;
}
.trip-btn.active{
    background: #ffc107;
    color: #000;
}

/* Content */
.hero-title{
    font-size: 55px;
    font-weight: 900;
    line-height: 1.2;
    color: #212529;
}
.hero-title span{
    display: block;
}

/* Car Image */
.car-img{
    max-width: 100%;
    filter: drop-shadow(0px 25px 25px rgba(0,0,0,0.2));
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

/* Feature Box */
.feature-box{
    text-align: center;
    padding: 15px;
    border-radius: 10px;
    background: #f8f9fa;
    transition: all 0.3s;
}
.feature-box:hover{
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* Feature Cards */
.feature-card{
    transition: all 0.3s;
    border: 1px solid #e9ecef;
}
.feature-card:hover{
    transform: translateY(-10px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

.feature-icon{
    transition: transform 0.3s;
}
.feature-card:hover .feature-icon{
    transform: scale(1.1);
}

/* Steps Section */
.steps-section{
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

/* Responsive */
@media (max-width: 768px) {
    .hero-title{
        font-size: 35px;
    }
    .booking-box{
        margin-top: 20px;
    }
}
</style>
</head>

